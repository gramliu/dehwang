{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src"]
  },
  "include": ["./src/**/*"],
  "exclude": ["input"],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
